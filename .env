# ============================================================================
# DELIVERYAPP - CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=clave-secreta-super-segura-cambiar-en-produccion
JWT_SECRET_KEY=jwt-clave-secreta-super-segura-cambiar-en-produccion

# MongoDB Configuration
# Opción 1: MongoDB Local
MONGO_URI=mongodb://localhost:27017/

# Opción 2: MongoDB Atlas (Cloud)
# MONGO_URI=mongodb+srv://usuario:password@cluster.mongodb.net/deliveryhub?retryWrites=true&w=majority

# Database Name
DB_NAME=deliveryhub

# Server Configuration
HOST=0.0.0.0
PORT=5000

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=2592000  # 30 días en segundos

# CORS Configuration
CORS_ORIGINS=*  # En producción, especifica los dominios permitidos

# Email Configuration (opcional - para envío de correos)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-password-de-app
EMAIL_FROM=noreply@deliveryhub.com

# Payment Gateway (opcional)
# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# MercadoPago
MERCADOPAGO_PUBLIC_KEY=TEST-xxxxx
MERCADOPAGO_ACCESS_TOKEN=TEST-xxxxx

# PayPal
PAYPAL_CLIENT_ID=xxxxx
PAYPAL_CLIENT_SECRET=xxxxx

# Cloud Storage (opcional - para imágenes)
# AWS S3
AWS_ACCESS_KEY_ID=xxxxx
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_S3_BUCKET=deliveryhub-uploads
AWS_REGION=us-east-1

# Cloudinary
CLOUDINARY_CLOUD_NAME=xxxxx
CLOUDINARY_API_KEY=xxxxx
CLOUDINARY_API_SECRET=xxxxx

# Push Notifications (opcional)
# Firebase
FIREBASE_SERVER_KEY=xxxxx
FIREBASE_SENDER_ID=xxxxx

# Maps & Geolocation
GOOGLE_MAPS_API_KEY=xxxxx

# External APIs
TWILIO_ACCOUNT_SID=xxxxx  # Para SMS
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Application URLs
FRONTEND_URL=http://localhost:3000
MOBILE_APP_SCHEME=deliveryhub://

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT=100  # Requests por minuto

# Cache (Redis - opcional)
REDIS_URL=redis://localhost:6379/0

# Session
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=3600  # 1 hora

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads/
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Development/Production
ENV=development  # development, staging, production